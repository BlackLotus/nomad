{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Python: VaspRun",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/submodules/parsers/vasp/",
      "program": "${workspaceFolder}/submodules/parsers/vasp/parser/parser-vasp/vaspparser/parser_vasprun.py",
      "args": [
        "test/examples/oqmd/relaxation/vasprun.xml", "test/examples/oqmd/relaxation/vasprun.xml"
      ]
    },
    {
      "name": "Python: worker nomad.processing",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/.pyenv/bin/celery",
      "args": [
        "worker", "-l" , "debug",  "-A", "nomad.processing"
      ]
    },
    {
      "name": "Python: test/test_parsing.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/.pyenv/bin/pytest",
      "args": [
        "-v", "tests/test_parsing.py"
      ]
    },
    {
      "name": "Python: tests/test_dependencies.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/tests/test_dependencies.py"
    },
    {
      "name": "Python: tests/test_processing.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/tests/test_processing.py"
    },
    {
      "name": "Python: tests/test_files.py",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/tests/test_files.py"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}"
    },
    {
      "name": "Python: Attach",
      "type": "python",
      "request": "attach",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "port": 3000,
      "secret": "my_secret",
      "host": "localhost"
    }
  ]
}